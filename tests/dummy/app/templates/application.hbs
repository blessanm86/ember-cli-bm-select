<h2 id="title">Welcome to Ember</h2>

<p>The selected country is <span id="country-value">{{country}}</span></p>

{{#bm-select value=model.selectedCountry action="countryChanged"}}

    {{#bm-selected}}
        {{#if model.selectedCountry}}
            {{model.selectedCountry}}
        {{else}}
            Select a country
        {{/if}}
    {{/bm-selected}}

    {{#bm-options}}
        {{#bm-option}}Select a country{{/bm-option}}
        {{#each model.countriesObj as |item|}}
            {{#bm-option data=item key="name" isDisabled=item.disabled}}
                {{item.name}}
            {{/bm-option}}
        {{/each}}
    {{/bm-options}}

{{/bm-select}}

{{input id="dummy-input"}}
