<h2 id='title'>Welcome to Ember.js</h2>

{{#bm-select value=selectedCountry action="countryChanged"}}
        
    {{#bm-selected}}
        {{selectedCountry}}
    {{/bm-selected}}
    
    {{#bm-options}}                    
        {{#each item in model.countriesObj}}
            {{#bm-option data=item key="name"}}
                {{item.name}}
            {{/bm-option}}
        {{/each}}
    {{/bm-options}}

{{/bm-select}}

<p>The selected country is <span id="country-value">{{country}}</span></p>
